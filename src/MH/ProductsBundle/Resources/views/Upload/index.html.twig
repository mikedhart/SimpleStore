{% extends '::base.html.twig' %}

{% block body -%}
    <div class="row">
        <div class="span12">
            <h1>Upload list</h1>

            <table class="table">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Product</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.product }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('admin_uploads_show', { 'id': entity.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('admin_uploads_edit', { 'id': entity.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a class="btn btn-primary"  href="{{ path('admin_uploads_new') }}">
                Create a new entry
            </a>
        </div><!-- span12 -->
    </div><!-- row -->

    {% endblock %}
