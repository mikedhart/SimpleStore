                <a href="{{ path('mh_store_complete_order') }}">Shopping bag ({{ products_in_cart|length }} items)</a>
            </div><!-- cart -->
        </div><!-- span6 -->
    </div><!-- row -->
    <div class="row">
        <div class="span12">
            <div class="navbar">
                <div class="navbar-inner">
                    <ul class="nav">
												<li><a href="{{ path('mh_store_homepage') }}">Home</a></li>
                        {% for category in categories %}
                            <li><a href="{{ path('mh_store_primary_category', { id: category.id }) }}">{{ category }}</a></li>
                        {% endfor %}
                    </ul><!-- nav -->
                </div><!-- navbar-inner -->
            </div><!-- navbar -->
        </div><!-- span12 -->
    </div><!-- row -->
</div><!-- container -->

<div class="container">
	<div class="row">
		<div class="span12">
				{% for flashMessage in app.session.flashbag.get('notice') %}
					<div class="alert alert-warning">
							{{ flashMessage }}
