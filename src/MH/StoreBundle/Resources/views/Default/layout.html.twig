</head>
<body>
<div class="container">
    <div class="row">
        <div class="span6">
            <a href="{{ path('mh_store_homepage') }}"><h1 id="logo">{{ settings.storeName }}</h1></a>
        </div><!-- span6 -->
        <div class="span6 actions my_stuff">
            {% if customer is defined %}
							<a href="{{ path('customers_orders') }}">My Orders</a> |
							<a href="#">About</a> |
							<a href="{{ path('customers_logout') }}">Log out</a>
						{% else %}
							<a href="{{ path('customers_login') }}">Log in</a> |
							<a href="#">About</a> |
							<a href="{{ path('customers_new') }}">Register</a>
						{% endif %}
						
						<div class="clear"></div>

<h4 style="
    display: block;
    float: right;
"><u>Tel:</u> 0800 000 000 <u>Email:</u>: sales@pantasticpots.co.uk</h4>
